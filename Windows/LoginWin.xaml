<Window x:Class="WpfFarm.Windows.LoginWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFarm.Windows"
        mc:Ignorable="d"
        Icon="../icon.jpg"
        Title="Авторизация" Height="425" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.12*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition  Height="0.13*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid ></Grid>
        <Grid Grid.Row="1" >
            <StackPanel Margin="25,0">
                <TextBlock Foreground="#9BD770" Text="Авторизация" FontSize="26" HorizontalAlignment="Center" Margin="0,30" />
                <TextBlock HorizontalAlignment="Center" Text="Логин" />
                <TextBox Name="LoginTextBox"/>
                <TextBlock HorizontalAlignment="Center" Text="Пароль" />
                <PasswordBox Height="30" x:Name="PassBox" />
                <Button Click="LoginClick" Content="Войти" />
            </StackPanel>
        </Grid>
        <Grid Background="#1B3409" Grid.Row="2" ></Grid>
    </Grid>
</Window>
